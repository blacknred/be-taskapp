{
  "name": "taskapp",
  "private": true,
  "license": "MIT",
  "version": "0.0.1",
  "description": "Sample application for managing tasks",
  "author": "Dmitry Tretyakov <tretyakov.dmi@gmail.com> (https://blacknred.github.io/)",
  "repository": "https://github.com/blacknred/full-taskapp.git",
  
  "scripts": {
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap --hoist",
    "start": "make prod",
    "dev": "make dev",
    "publish": "make publish",
    "format": "prettier --write \"apps/**/*.ts\"",
    
    "build:lib": "pnpm run build --filter @taskapp/lib",
    "build:lib:watch": "pnpm run build:watch --filter @monosample/lib",
    "dev:api2:website1": "concurrently \"pnpm run dev --filter @monosample/api2\" \"pnpm run start --filter @monosample/website1\"",
    "dev:api2:website2": "concurrently \"pnpm run dev --filter @monosample/api2\" \"pnpm run serve --filter @monosample/website2\"",
    "dev:api2:website3": "concurrently \"pnpm run dev --filter @monosample/api2\" \"pnpm run start --filter @monosample/website3\"",
    "migrations:up": "ts-node ./node_modules/typeorm/cli.js migration:run",
    "migrations:down": "ts-node ./node_modules/typeorm/cli.js migration:revert"
  },
  
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "db": "npx mikro-orm migration:create && npx mikro-orm migration:up"
  },



  "devDependencies": {
    "@types/jest": "^29.2.1",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.2.2",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.21",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "ts-loader": "^9.2.5",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.3.5",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.2"
  },
  "packageManager": "pnpm@7.0.0",
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./mikro-orm.config.ts"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.+(ts|tsx)": [
      "yarn format",
      "yarn lint"
    ]
  }
}