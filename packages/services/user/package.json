{
  "name": "@taskapp/user",
  "private": true,
  "version": "0.0.0",
  "description": "Taskapp user microservice",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/nest-app/test/jest-e2e.json",
    "db": "npx mikro-orm migration:create && npx mikro-orm migration:up"
  },
  "dependencies": {
    "@taskapp/microservice": "workspace:*",
    "@hapi/joi": "^17.1.1",
    "@mikro-orm/core": "^5.2.1",
    "@mikro-orm/nestjs": "^4.3.1",
    "@mikro-orm/postgresql": "^5.2.1",
    "@nestjs/common": "^8.0.6",
    "@nestjs/config": "^1.0.1",
    "@nestjs/core": "^8.0.6",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^8.0.6",
    "@nestjs/platform-express": "^8.0.6",
    "amqp-connection-manager": "^3.7.0",
    "amqplib": "^0.8.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "pg": "^8.7.1",
    "redis": "^3.1.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.3.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@taskapp/types": "workspace:*",
    "@nestjs/cli": "^8.1.1",
    "@nestjs/schematics": "^8.0.2",
    "@nestjs/testing": "^8.0.6",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.13",
    "@types/hapi__joi": "^17.1.7",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.7.1",
    "@types/redis": "^2.8.32",
    "@types/supertest": "^2.0.11",
    "supertest": "^6.1.3"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./mikro-orm.config.ts"
    ]
  }
}
